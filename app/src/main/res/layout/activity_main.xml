<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#91CACE"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tt"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="#075492"
        android:layout_height="44dp"
        android:textStyle="bold"
        android:text="Calculate Your" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="92dp"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:background="#CE6387"

        android:gravity="center"
        android:text="AGE"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="25dp" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="#075492"
        android:layout_height="44dp"
        android:textStyle="bold"
        android:text="In Minutes" />

    <Button
        android:id="@+id/selectDate"
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"

        android:backgroundTint="#085E83"
        android:text="Select Date"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/date"
        android:layout_width="174dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#89123A"
        android:textSize="24dp"
        android:text="11323276" />

    <TextView
        android:id="@+id/textVie"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Selected Date"
        android:textSize="16dp" />
    <TextView
        android:id="@+id/age"
        android:layout_marginTop="25dp"
        android:layout_width="174dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:textColor="#89123A"
        android:gravity="center"
        android:textSize="34dp"
        android:text="11323276" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Age In Minutes"
        android:textSize="16dp" />

    <Button
        android:id="@+id/clr"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:backgroundTint="#1F4562"
        android:textSize="20dp"
        android:text="Clear" />

</LinearLayout>
